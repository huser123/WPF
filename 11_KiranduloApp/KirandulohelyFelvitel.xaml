<!-- KirandulohelyFelvitel.xaml -->
<Window x:Class="KiranduloApp.KirandulohelyFelvitel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Új Kirándulóhely Felvétele" Height="350" Width="400">
    <Grid Margin="10">
        <!-- Form elemek -->
        <StackPanel>
            <TextBlock Text="Kirándulóhely neve:" FontWeight="Bold" />
            <TextBox x:Name="tbNev" Margin="0,0,0,10" />

            <TextBlock Text="Helyszín:" FontWeight="Bold" />
            <TextBox x:Name="tbHelyszin" Margin="0,0,0,10" />

            <TextBlock Text="Nehézségi szint:" FontWeight="Bold" />
            <TextBox x:Name="tbNehezsegiSzint" Margin="0,0,0,10" />

            <TextBlock Text="Látogatók száma:" FontWeight="Bold" />
            <TextBox x:Name="tbLatogatokSzama" Margin="0,0,0,10" />

            <TextBlock Text="Távolság (km):" FontWeight="Bold" />
            <TextBox x:Name="tbTav" Margin="0,0,0,10" />

            <!-- Gombok -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Mentés" Click="btnMentés_Click" Width="100" Margin="10,0" />
                <Button Content="Mégse" Click="btnMegse_Click" Width="100" Margin="10,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
